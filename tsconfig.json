{
	"extends": "astro/tsconfigs/strict",
	"compilerOptions": {
		"strictNullChecks": true,
		"allowJs": true,
		"allowImportingTsExtensions": true,
		"baseUrl": ".",
		"paths": {
			"@assets/*": [
				"./src/assets/*"
			],
			"@components/*": [
				"./src/components/*"
			],
			"@layouts/*": [
				"./src/layouts/*"
			],
			"@pages/*": [
				"./src/pages/*"
			],
			"@styles/*": [
				"./src/styles/*"
			],
			"@src/*": [
				"./src/*"
			]
		}
	},
}